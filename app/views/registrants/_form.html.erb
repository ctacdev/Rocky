<%= hidden_field_tag "partner", @partner_id %>
<%= hidden_field_tag "locale", @locale %>
<%= hidden_field_tag "source", @source %>
<%= hidden_field_tag "tracking", @tracking %>
<%= hidden_field_tag "short_form", @short_form %>
<%= hidden_field_tag "collectemailaddress", @collect_email_address %>
<%= form.hidden_field :under_18_ok, :value => 0 %>


<% content_for :head do %>
<script>
$(document).ready(function() {
  $('#registrant_javascript_disabled').remove();
});
</script>
<% end %>
<%= form.hidden_field :javascript_disabled %>

<%- if @registrant.collect_email_address? %>
  <ul class="flat">
    <li class="width_f">
      <h3><%= form.label :email_address %></h3>
      <%= field_div form, :email_address, class: 'form-control' %>
      <span class="tooltip"><%= tooltip_tag :email_address %></span>
      <div class="error"><%= form.object.errors[:email_address].join("\n") %></div>
    </li>
  </ul>
<%- end %>
<ul class="flat form-row-alt">
  <li class="width_f">
    <h3><%= form.label :home_zip_code %></h3>
    <%= field_div form, :home_zip_code, class: 'form-control' %>
    <span class="tooltip"><%= tooltip_tag :home_zip_code %></span>
    <span class="error"><%= form.object.errors[:home_zip_code].join("\n") %></span>
  </li>
</ul>
<ul class="flat">
  <li class="width_f">
    <h3><%= form.label :date_of_birth %></h3>
    <%= field_div form, :date_of_birth, :value => form.object.form_date_of_birth, class: 'form-control'  %>
    <div class="tooltip"><%= tooltip_tag :date_of_birth %></div>
    <% if !form.object.errors[:date_of_birth].empty? %>
      <span class="error"><%= form.object.errors[:date_of_birth].join("\n") %></span>
    <% else %>
      <span class="example">MM-DD-YYYY</span>
    <% end %>
  </li>
</ul>

<ul class="checkbox checkbox-step-1 form-row-alt">
  <li>
    <h3>
      <%= form.check_box :us_citizen %> <%= form.label :us_citizen %>
      <span class="error"><%= form.object.errors[:us_citizen].join("\n") %></span>
    </h3>
  </li>
</ul>



<ul class="checkbox checkbox-step-1">
  <li>
    <h3>
      <%= form.check_box :has_state_license %> <%= form.label :has_state_license %>
      <span class="error"><%= form.object.errors[:has_state_license].join("\n") %></span>
      
    </h3>
  </li>
</ul>

<ul class="checkbox checkbox-step-1 form-row-alt">
  <li>
    <h3>
      <%= form.check_box :will_be_18_by_election %> <%= form.label :will_be_18_by_election %>
      <span class="error"><%= form.object.errors[:will_be_18_by_election].join("\n") %></span>
      
    </h3>
  </li>
</ul>



<ul class="checkbox checkbox-step-1">
  <li>
    <h3>
      <%= form.check_box :first_registration %> <%= form.label :first_registration %>
      <span class="error"><%= form.object.errors[:first_registration].join("\n") %></span>
    </h3>
  </li>
</ul>
