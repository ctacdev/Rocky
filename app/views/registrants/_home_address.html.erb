<% content_for :head do %>
<script>
$(document).ready(function() {
  checkboxTogglesSet($('#registrant_has_mailing_address'), $('#mailing_address_set'), $('#mailing_address_rule'));
  $('#javascript_disabled').remove();
});
</script>
<% end %>


<fieldset>
  <legend><%= I18n.t('txt.registration.home_address') %></legend>

    <br/><span class="tooltip"><%= t("txt.registration.tooltips.home_address")%></span><br/>
  <div class="stacked space_labels">
    <div class="width_a">
      <label for="registrant_home_address">
        <span class="required" title="required">*</span>
        <%= t("activerecord.attributes.registrant.home_address") %>
      </label>
      <%= field_div form, :home_address %>
      <!-- <span class="error"><%= form.object.errors[:home_address].join("\n") %></span> -->
    </div>
    <div class="width_b">
      <%= form.label :home_unit %>
      <%= field_div form, :home_unit %>
    </div>
    <div class="width_a">
      <label for="registrant_home_city">
        <span class="required" title="required">*</span>
        <%= t("activerecord.attributes.registrant.home_city") %></label>
      <%= field_div form, :home_city %>
      <!-- <span class="error"><%= form.object.errors[:home_city].join("\n") %></span> -->
    </div>
    <div class="width_b">
      <label for="registrant_home_state_name">
        <span class="required" title="required">*</span>
        <%= t("activerecord.attributes.registrant.home_state_name") %>
      </label>
      <%= field_div form, :home_state_name, disabled: true %>
      <!-- <span class="error"><%= form.object.errors[:home_state_name].join("\n") %></span> -->
    </div>
    <div class="width_c">
      <label for="registrant_home_zip_code"><span class="required" title="required">*</span>
        <%= t("activerecord.attributes.registrant.home_zip_code") %>
      </label>
      <%= field_div form, :home_zip_code, :size => 8 %>
      <!-- <span class="error"><%= form.object.errors[:home_zip_code].join("\n") %></span> -->
    </div>
  </div>
</fieldset>

<fieldset class='no_border'>
  <legend><%= t('txt.registration.has_mailing_address') %></legend>
  <div class="checkbox">
    <div>
        <%= form.check_box :has_mailing_address %>
        <%= form.label :has_mailing_address, {}, class: "check-box-step-1" %>  
    </div>
  </div>
</fieldset>

<fieldset id="mailing_address_set">
  <%= hidden_field_tag "javascript_disabled", "1"  %>
  <legend><%= t('txt.registration.mailing_address') %></legend>
  <br/><span class="tooltip"><%= t("txt.registration.tooltips.mailing_address")%></span><br/>
  <div class="stacked space_labels">
    <div class="width_a">
      <%= form.label :mailing_address %>
      <%= field_div form, :mailing_address %>
      <span class="error"><%= form.object.errors[:mailing_address].join("\n") %></span>
    </div>
    <div class="width_b">
      <%= form.label :mailing_unit %>
      <%= field_div form, :mailing_unit, :size => 15 %>
    </div>
    <div class="width_a">
      <%= form.label :mailing_city %>
      <%= field_div form, :mailing_city %>
      <span class="error"><%= form.object.errors[:mailing_city].join("\n") %></span>
    </div>
    <div class="width_b">
      <%= form.label :mailing_state_abbrev %>
      <div><%= form.select :mailing_state_abbrev, GeoState.collection_for_select %></div>
      <span class="error"><%= form.object.errors[:mailing_state_id].join("\n") %></span>
    </div>
    <div class="width_c">
      <%= form.label :mailing_zip_code %>
      <%= field_div form, :mailing_zip_code, :size => 10, :maxlength => 10 %>
      <span class="error"><%= form.object.errors[:mailing_zip_code].join("\n") %></span>
    </div>
  </div>
</fieldset>
<%- show_hr = show_hr.nil? ? true : show_hr %>
<%- if show_hr %>
 
<%- end %>
